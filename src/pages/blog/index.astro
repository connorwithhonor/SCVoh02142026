---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort((a, b) => {
	const aDate = a.data.publishDate?.valueOf() || a.data.pubDate?.valueOf() || 0;
	const bDate = b.data.publishDate?.valueOf() || b.data.pubDate?.valueOf() || 0;
	return bDate - aDate;
});
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Seller's Guide | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-50">
		<Header />

		<!-- Page Header -->
		<section class="relative overflow-hidden text-white py-14 sm:py-16 md:py-20 px-4 sm:px-6 bg-gradient-to-br from-slate-950 via-blue-950 to-slate-900">
			<div class="absolute inset-0 opacity-25 pointer-events-none bg-[linear-gradient(rgba(56,189,248,0.15)_1px,transparent_1px),linear-gradient(90deg,rgba(56,189,248,0.15)_1px,transparent_1px)] bg-[size:48px_48px]"></div>
			<div class="absolute inset-x-0 top-1/2 h-px bg-gradient-to-r from-transparent via-cyan-300/80 to-transparent"></div>
			<div class="max-w-6xl mx-auto text-center relative z-10">
				<div class="inline-block bg-slate-950/35 backdrop-blur-md rounded-2xl px-4 sm:px-6 py-5 sm:py-6 border border-cyan-300/35 shadow-[0_0_48px_rgba(56,189,248,0.35)]">
				<div class="inline-flex items-center gap-2 text-xs font-bold uppercase tracking-[0.16em] bg-white/10 border border-white/20 rounded-full px-4 py-2 mb-6">
					<span class="w-1.5 h-1.5 rounded-full bg-amber-400"></span>
					Seller Resources
				</div>
				<h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 sm:mb-4 tracking-tight text-cyan-50 drop-shadow-[0_0_24px_rgba(34,211,238,0.9)]">Santa Clarita Seller's Guide</h1>
				<p class="text-base sm:text-lg md:text-xl text-cyan-100 mb-3 sm:mb-4 drop-shadow-[0_0_14px_rgba(34,211,238,0.5)]">
					Seller-first strategy, market intelligence, and execution for Santa Clarita homeowners.
				</p>
				<p class="text-sm sm:text-base md:text-lg text-sky-100 drop-shadow-[0_0_14px_rgba(56,189,248,0.5)]">
					This is <strong class="text-white">not an IDX home-search site</strong>. This is my seller playbookâ€”real-world strategy, sold-market context, and custom guidance to help you list smart, protect your equity, and sell on your terms.
				</p>
				</div>
			</div>
		</section>

		<!-- Blog Posts Grid -->
		<main class="max-w-6xl mx-auto px-4 sm:px-6 py-10 sm:py-12">
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{posts.map((post) => (
					<article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
						<a href={`/blog/${post.id}/`} class="block">
							{post.data.heroImage && (
								<div class="aspect-video overflow-hidden bg-gray-200">
									<img
										src={post.data.heroImage}
										alt={post.data.title}
										class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
										loading="lazy"
									/>
								</div>
							)}
							<div class="p-6">
								{post.data.neighborhood && (
									<div class="flex items-center text-sm text-amber-600 font-semibold mb-2">
										<svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
										</svg>
										{post.data.neighborhood}
									</div>
								)}
								<h2 class="text-xl font-bold mb-2 text-gray-900 line-clamp-2 hover:text-blue-900 transition-colors">
									{post.data.title}
								</h2>
								<p class="text-gray-600 line-clamp-3">
									{post.data.description}
								</p>
							</div>
						</a>
					</article>
				))}
			</div>

			{posts.length === 0 && (
				<div class="text-center py-16">
					<svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
					</svg>
					<h3 class="text-2xl font-bold text-gray-700 mb-2">No Open Houses Yet</h3>
					<p class="text-gray-500">Check back soon for new listings!</p>
				</div>
			)}
		</main>

		<Footer />
	</body>
</html>

---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

const bookingSchema = {
	'@context': 'https://schema.org',
	'@type': 'ContactPage',
	name: `Get Started | ${SITE_TITLE}`,
	url: 'https://santaclaritaopenhouses.com/book',
	mainEntity: {
		'@type': 'Service',
		name: 'Seller Strategy Consultation',
		provider: {
			'@type': 'RealEstateAgent',
			name: SITE_TITLE,
		},
		areaServed: 'Santa Clarita Valley',
	},
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Book a Consultation | ${SITE_TITLE}`} description="Schedule a free consultation to discuss selling your Santa Clarita home" />
		<script type="application/ld+json" set:html={JSON.stringify(bookingSchema)} />
	</head>
	<body class="bg-gray-50">
		<Header />

		<!-- Page Header -->
		<section class="relative overflow-hidden text-white py-14 sm:py-16 md:py-20 px-4 sm:px-6 bg-gradient-to-br from-slate-950 via-emerald-950 to-slate-900">
			<div class="absolute inset-0 opacity-25 pointer-events-none bg-[linear-gradient(rgba(74,222,128,0.16)_1px,transparent_1px),linear-gradient(90deg,rgba(74,222,128,0.16)_1px,transparent_1px)] bg-[size:48px_48px]"></div>
			<div class="absolute inset-x-0 top-1/2 h-px bg-gradient-to-r from-transparent via-emerald-300/90 to-transparent"></div>
			<div class="max-w-4xl mx-auto text-center relative z-10">
				<div class="inline-block bg-slate-950/35 backdrop-blur-md rounded-2xl px-4 sm:px-6 py-5 sm:py-6 border border-emerald-300/35 shadow-[0_0_48px_rgba(74,222,128,0.35)]">
				<div class="inline-flex items-center gap-2 text-xs font-bold uppercase tracking-[0.16em] bg-white/10 border border-white/20 rounded-full px-4 py-2 mb-6">
					<span class="w-1.5 h-1.5 rounded-full bg-emerald-300"></span>
					Get Started
				</div>
				<h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-3 sm:mb-4 text-emerald-50 drop-shadow-[0_0_24px_rgba(74,222,128,0.9)]">Book Your Free Consultation</h1>
				<p class="text-base sm:text-lg md:text-xl text-emerald-100 drop-shadow-[0_0_14px_rgba(74,222,128,0.55)]">
					Let's discuss your Santa Clarita home sale strategy
				</p>
				</div>
			</div>
		</section>

		<!-- Booking Calendar -->
		<main class="max-w-4xl mx-auto px-4 sm:px-6 py-10 sm:py-12">
			<div class="bg-white rounded-xl shadow-md p-8 md:p-12">
				<div class="text-center mb-8">
					<h2 class="text-2xl font-bold mb-4 text-gray-900">Schedule Your Appointment</h2>
					<p class="text-gray-600">
						Pick a time that works for you. We'll discuss your home's value, market conditions, and a custom selling strategy.
					</p>
					<p class="mt-4 text-gray-700">
						<strong>Questions?</strong> Call or text: <a href="tel:6614001720" class="text-blue-900 underline">661.400.1720</a>
					</p>
				</div>

				<!-- HonorElevate Booking Widget -->
				<div class="booking-widget-container">
					<iframe
						src="https://api.honorelevate.com/widget/booking/sMwNSzPnGoniBv3yatCI"
						style="width: 100%; border: none; overflow: hidden; min-height: 800px;"
						scrolling="no"
						id="honor-elevate-booking-widget"
						title="Book an appointment"
					></iframe>
				</div>

				<!-- Contact Info -->
				<div class="mt-8 pt-8 border-t border-gray-200 text-center">
					<p class="text-gray-600 mb-4">Prefer to talk first?</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="tel:6614001720" class="inline-flex items-center justify-center bg-blue-900 hover:bg-blue-800 text-white font-semibold px-8 py-3 rounded-lg transition-all">
							<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
							</svg>
							Call 661.400.1720
						</a>
						<a href="mailto:info@santaclaritaopenhouses.com" class="inline-flex items-center justify-center bg-amber-500 hover:bg-amber-600 text-white font-semibold px-8 py-3 rounded-lg transition-all">
							<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
							</svg>
							Send Email
						</a>
					</div>
				</div>
			</div>
		</main>

		<Footer />

		<!-- HonorElevate Form Embed Script -->
		<script src="https://api.honorelevate.com/js/form_embed.js" type="text/javascript"></script>
	</body>
</html>

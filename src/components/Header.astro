---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="bg-white shadow-md sticky top-0 z-50">
	<nav class="max-w-6xl mx-auto">
		<div class="flex items-center justify-between">
			<h2 class="logo">
				<a href="/" class="flex items-center gap-2">
					<svg class="w-8 h-8 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
						<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
					</svg>
					<span>{SITE_TITLE}</span>
				</a>
			</h2>
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Seller Resources</HeaderLink>
				<HeaderLink href="/about">Why Exclusive</HeaderLink>
				<HeaderLink href="/book">Get Started</HeaderLink>
			</div>
			<div class="cta-button">
				<a href="tel:6614001720" class="bg-amber-500 hover:bg-amber-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors">
					ðŸ“ž 661.400.1720
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
	}
	nav {
		padding: 0 1.5rem;
	}
	.logo {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
	}
	.logo a {
		text-decoration: none;
		color: #1e3a8a;
		transition: color 0.2s;
	}
	.logo a:hover {
		color: #1e40af;
	}
	nav .flex {
		gap: 2rem;
	}
	.internal-links {
		display: flex;
		gap: 0.5rem;
	}
	.internal-links :global(a) {
		padding: 1.5rem 1rem;
		color: #374151;
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s;
	}
	.internal-links :global(a:hover) {
		color: #1e3a8a;
	}
	.internal-links :global(a.active) {
		color: #1e3a8a;
		border-bottom-color: #f59e0b;
	}
	.cta-button a {
		text-decoration: none;
		display: inline-block;
	}
	@media (max-width: 768px) {
		.cta-button {
			display: none;
		}
		.internal-links {
			gap: 0.25rem;
		}
		.internal-links :global(a) {
			padding: 1rem 0.5rem;
			font-size: 0.9rem;
		}
		.logo {
			font-size: 1rem;
		}
		.logo svg {
			width: 1.5rem;
			height: 1.5rem;
		}
	}
</style>

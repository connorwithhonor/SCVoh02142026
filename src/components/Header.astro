---
import HeaderLink from './HeaderLink.astro';
---

<header class="sticky top-0 z-50">
	<nav class="max-w-6xl mx-auto">
		<div class="flex items-center justify-between">
			<h2 class="logo">
				<a href="/" class="flex items-center gap-3">
					<svg class="w-9 h-9 flex-shrink-0 brand-icon" fill="currentColor" viewBox="0 0 20 20">
						<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
					</svg>
					<div class="flex flex-col leading-tight">
						<span class="brand-main">Santa Clarita Open Houses</span>
						<span class="brand-sub">Seller Exclusive Realtor</span>
					</div>
				</a>
			</h2>

			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Seller's Guide</HeaderLink>
				<HeaderLink href="/about">Why Exclusive</HeaderLink>
				<HeaderLink href="/book">Get Started</HeaderLink>
			</div>

			<div class="cta-button">
				<a href="tel:6614001720" class="phone-cta">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
					</svg>
					<span>661.400.1720</span>
				</a>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		background: linear-gradient(135deg, rgba(2, 6, 23, 0.94), rgba(15, 23, 42, 0.92));
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(100, 116, 139, 0.28);
		box-shadow: 0 10px 30px rgba(2, 6, 23, 0.28);
	}

	nav {
		padding: 0 1.25rem;
	}

	nav .flex {
		gap: 1.5rem;
	}

	.logo {
		margin: 0;
		font-weight: 700;
	}

	.logo a {
		padding: 0.8rem 0;
		text-decoration: none;
		transition: transform 0.2s ease;
	}

	.logo a:hover {
		transform: translateY(-0.5px);
	}

	.brand-icon {
		color: #60a5fa;
		filter: drop-shadow(0 0 8px rgba(96, 165, 250, 0.35));
	}

	.brand-main {
		font-size: 1.2rem;
		font-weight: 800;
		line-height: 1.15;
		letter-spacing: 0.01em;
		color: #e2e8f0;
	}

	.brand-sub {
		margin-top: 0.12rem;
		font-size: 0.74rem;
		font-weight: 700;
		line-height: 1.15;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: #fb7185;
	}

	.internal-links {
		display: flex;
		gap: 0.5rem;
	}

	.internal-links :global(a) {
		padding: 1.2rem 0.85rem;
		color: #cbd5e1;
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.2s;
	}

	.internal-links :global(a:hover) {
		color: #f8fafc;
	}

	.internal-links :global(a.active) {
		color: #fecdd3;
		border-bottom-color: #fb7185;
		text-shadow: 0 0 8px rgba(251, 113, 133, 0.4);
		box-shadow: inset 0 -2px 0 rgba(251, 113, 133, 0.85);
	}

	.cta-button a {
		text-decoration: none;
		display: inline-block;
	}

	.phone-cta {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.58rem 0.95rem;
		border-radius: 0.75rem;
		font-weight: 700;
		color: #fff;
		background: linear-gradient(135deg, #111827, #1e3a8a 52%, #0f172a);
		border: 1px solid rgba(96, 165, 250, 0.45);
		box-shadow: 0 0 0 1px rgba(59, 130, 246, 0.16), 0 10px 20px rgba(15, 23, 42, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.09);
		transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease;
	}

	.phone-cta:hover {
		transform: translateY(-1px);
		filter: brightness(1.05);
		box-shadow: 0 0 0 1px rgba(96, 165, 250, 0.35), 0 12px 24px rgba(15, 23, 42, 0.42), 0 0 16px rgba(59, 130, 246, 0.2);
	}

	@media (max-width: 768px) {
		.cta-button {
			display: none;
		}

		.internal-links {
			gap: 0.25rem;
		}

		.internal-links :global(a) {
			padding: 0.9rem 0.45rem;
			font-size: 0.84rem;
		}

		.logo svg {
			width: 1.5rem;
			height: 1.5rem;
		}

		.brand-main {
			font-size: 1.02rem;
		}

		.brand-sub {
			font-size: 0.64rem;
			letter-spacing: 0.07em;
		}
	}
</style>

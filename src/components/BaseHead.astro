---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	noindex?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = FallbackImage, noindex = false } = Astro.props;

const siteUrl = 'https://santaclaritaopenhouses.com';
const organizationSchema = {
	'@context': 'https://schema.org',
	'@type': 'RealEstateAgent',
	'@id': `${siteUrl}/#organization`,
	name: SITE_TITLE,
	url: siteUrl,
	telephone: '+1-661-400-1720',
	email: 'connor@santaclaritaopenhouses.com',
	areaServed: ['Santa Clarita', 'Valencia', 'Canyon Country', 'Saugus', 'Stevenson Ranch', 'Newhall', 'Castaic'],
	address: {
		'@type': 'PostalAddress',
		streetAddress: '25060 Avenue Stanford, Suite 150',
		addressLocality: 'Valencia',
		addressRegion: 'CA',
		postalCode: '91355',
		addressCountry: 'US',
	},
	sameAs: [
		'https://facebook.com/santaclaritaopenhouses',
		'https://instagram.com/santaclaritaopenhouses',
		'https://tiktok.com/@santaclaritaopenhouses',
		'https://linkedin.com/company/santaclaritaopenhouses',
		'https://x.com/connorwithhonor',
	],
};

const websiteSchema = {
	'@context': 'https://schema.org',
	'@type': 'WebSite',
	'@id': `${siteUrl}/#website`,
	url: siteUrl,
	name: SITE_TITLE,
	description,
	publisher: {
		'@id': `${siteUrl}/#organization`,
	},
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=20260217" />
<link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg?v=20260217" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1'} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />

<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

<script is:inline>
	(function () {
		const pushEvent = (eventName, eventParams) => {
			if (typeof window === 'undefined') {
				return;
			}

			if (typeof window.gtag === 'function') {
				window.gtag('event', eventName, eventParams);
			}

			if (Array.isArray(window.dataLayer)) {
				window.dataLayer.push({ event: eventName, ...eventParams });
			}
		};

		document.addEventListener('click', (event) => {
			const target = event.target;
			if (!(target instanceof Element)) {
				return;
			}

			const anchor = target.closest('a');
			if (!(anchor instanceof HTMLAnchorElement)) {
				return;
			}

			const href = anchor.getAttribute('href') || '';
			const linkText = (anchor.textContent || '').trim().slice(0, 120);
			const currentPath = window.location.pathname;

			if (href.startsWith('tel:')) {
				pushEvent('click_to_call', {
					link_url: href,
					link_text: linkText,
					page_path: currentPath,
				});
				return;
			}

			const isBookingLink = href === '/book' || href.startsWith('/book?') || href.includes('honorelevate.com/widget/booking');
			if (isBookingLink) {
				pushEvent('click_book_consultation', {
					link_url: href,
					link_text: linkText,
					page_path: currentPath,
				});
			}
		});
	})();
</script>
